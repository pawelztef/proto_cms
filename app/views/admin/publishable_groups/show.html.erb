<div class="uk-width-1-1@s uk-width-1-1@l uk-width-1-1@xl">
  <div class="uk-card uk-card-default uk-card-small">
    <div class="uk-card-header">
      <div class="uk-grid uk-grid-small">
        <div class="uk-width-auto"><div class="uk-card-title"><span uk-icon="album"></span><%= @title if @title %></div></div>
        <div class="uk-width-expand uk-text-right panel-icons">
          <% if can? :create, Post %>
            <a href= <%= new_admin_post_path %> class="uk-icon-link" title="Add Post" data-uk-tooltip data-uk-icon="icon: plus"></a>
          <% end %>
        </div>
      </div>
    </div>
    <div class="uk-card-body">


      <ul class="pz-tab">
        <%# <%= render partial: 'status_link', collection: generate_tabs_collection, as: :status %1> %>
      </ul> 

      <table class="uk-table uk-table-justify uk-table-divider">
        <thead>
          <tr>
            <th>Status</th>
            <th>Title</th>
            <th>Author</th>
            <th>Categories</th>
            <th>Tags</th>
            <th>Updated at</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if @publishables.blank? %>
            <tr>
              <td colspan="7" class="uk-text-center">
                No data!
              </td>
            </tr>
          <% else %>
            <% @publishables.each do |publishable| %>
              <tr>
                <%# <td><%= generate_status_label(publishable) %1></td> %>
                <td><%= publishable.title %></td>
                <%# TODO assotioation with author %>
                <%# <td><%= "John Doe" %1></td> %>
                <%# <td><%= generate_categories_labels(publishable) %1></td> %>
                <%# <td><%= generate_tags_labels(publishable) %1></td> %>
                <td><%= standard_date(publishable.updated_at) %></td>
                <td>
                  <% if can?(:update, Post) || can?(:destroy, Post) %>
                    <ul class="uk-iconnav">
                      <% if can? :update, Post %>
                        <li><a href="<%= edit_admin_post_path(publishable) %>" uk-icon="icon: file-edit"></a></li>
                      <% end %>
                      <% if can? :destroy, Post %>
                        <li><a href= <%= admin_post_path(publishable)  %> uk-icon="icon: trash" data-method="delete" rel="nofollow"></a></li>
                      <% end %>
                    </ul>
                  <% else %>
                    <ul class="uk-iconnav">
                      <li>Not authorized</li>
                    </ul>
                  <% end %>
                </td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

