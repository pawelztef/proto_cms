<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), input_html: {class: 'toggle-class'}) do |f| %>
  <fieldset class="uk-fieldset">
    <div class="uk-margin-small">
      <div class="uk-inline uk-width-1-1">
        <span class="uk-form-icon uk-form-icon-flip" data-uk-icon="icon: user"></span>
        <%= f.input :email,
          required: false,
          autofocus: true,
          label: false,
          input_html: {
            class: 'uk-input uk-border-pill',
            autocomplete: "email",
            placeholder: 'E-mail'
          } %>
      </div>
    </div>
    <div class="uk-margin-small">
      <div class="uk-inline uk-width-1-1">
        <span class="uk-form-icon uk-form-icon-flip" data-uk-icon="icon: lock"></span>	
        <%= f.input :password,
          required: false,
          label: false,
          input_html: { 
            class: 'uk-input uk-border-pill',
            placeholder: "Password", 
            autocomplete: "current-password"
          }
        %>
      </div>
    </div>
    <div class="uk-margin-small">
      <%= f.input :remember_me, input_html: { class: 'remember-me uk-checkbox' }, as: :boolean if devise_mapping.rememberable? %>
    </div>
    <div class="uk-margin-bottom">
      <%= f.button :submit, "Log in",
          class: 'uk-button uk-button-primary uk-border-pill uk-width-1-1'
      %>
    </div>
  </fieldset>
<% end %>
<div class="uk-text-center">
  <%= link_to "Forgot your password?", new_password_path(resource_name),
    class: "uk-link-reset uk-text-small toggle-class" %>
  <br />
</div>
