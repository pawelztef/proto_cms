<!-- LEFT BAR -->
<aside id="left-col" class="uk-light uk-visible@m">
  <div class="left-logo uk-flex uk-flex-middle">
    <% if Site.instance.logo.attached? %>
      <%= image_tag Site.instance.logo.variant(resize: "150x150"), class: 'custom-logo' %>
    <% end %>
  </div>
  <div class="left-content-box  content-box-dark">

    <% if current_user.avatar.attached? %>
      <%= image_tag current_user.avatar.variant(combine_options: { resize: "45x45", extent: "45x45", background: "black", gravity: "center"}), class: "uk-border-circle profile-img" if current_user.avatar.attached? %>
    <% else %>
      <%= image_pack_tag 'avatar.jpg', class: 'uk-border-circle profile-img', width: "35", height: "35" %>
    <% end %>

    <h4 class="uk-text-center uk-margin-remove-vertical text-light"><%= current_user.username %></h4>
    <div class="uk-position-relative uk-text-center uk-display-block" >
      <a href="#" class="uk-text-small uk-text-muted uk-display-block uk-text-center" data-uk-icon="icon: triangle-down; ratio: 0.7"><%= current_user.role %></a>
      <!-- user dropdown -->
      <div class="uk-dropdown user-drop" data-uk-dropdown="mode: click; pos: bottom-center; animation: uk-animation-slide-bottom-small; duration: 150">
        <ul class="uk-nav uk-dropdown-nav uk-text-left">
          <li><a href="#"><span data-uk-icon="icon: info"></span> Summary</a></li>
          <li><a href="#"><span data-uk-icon="icon: refresh"></span> Edit</a></li>
          <li><a href="#"><span data-uk-icon="icon: settings"></span> Configuration</a></li>
          <li class="uk-nav-divider"></li>
          <li><a href="#"><span data-uk-icon="icon: image"></span> Your Data</a></li>
          <li class="uk-nav-divider"></li>
          <li><a href="#"><span data-uk-icon="icon: sign-out"></span> Sign Out</a></li>
        </ul>
      </div>
      <!-- /user dropdown -->
    </div>
  </div>

  <div class="left-nav-wrap">
    <%= render 'admin/shared/menues/sidebar_main_nav' %> 
  </div>

  <div class="bar-bottom">
    <%= render 'admin/shared/menues/sidebar_footer_nav' %>
  </div>
</aside>
<!-- /LEFT BAR -->
