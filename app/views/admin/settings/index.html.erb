<div class="uk-width-1-1@s uk-width-1-1@l uk-width-1-1@xl">
  <div class="uk-card uk-card-default uk-card-small">
    <div class="uk-card-header">
      <div class="uk-grid uk-grid-small">
        <div class="uk-width-auto"><div class="uk-card-title"><span uk-icon="cog"></span><%= @title if @title %></div></div>
        <div class="uk-width-expand uk-text-right panel-icons">
        </div>
      </div>
    </div>
    <div class="uk-card-body">
      <div class="chart-container">
        <%= simple_form_for [:admin, @settings], html: {class: "uk-form-horizontal uk-margin-large"} do |f| %>
          <div class="uk-margin">
            <label class="uk-form-label" for="form-horizontal-text">Company name</label>
            <div class="uk-form-controls">
              <%= f.input :company_name, required: false, label: false, input_html: {class: "uk-input"} %>
            </div>
          </div>
          <div class="uk-margin">
            <label class="uk-form-label" for="form-horizontal-text">Catch phrase</label>
            <div class="uk-form-controls">
              <%= f.input :catch_phrase, required: false, label: false, input_html: {class: "uk-input"} %>
            </div>
          </div>
          <div class="uk-margin">
            <label class="uk-form-label" for="form-horizontal-select">Home page</label>
            <div class="uk-form-controls">
              <%= f.input :home_page, 
                required: false, 
                label: false, 
                collection: Page.all, 
                selected: HomePage.first.id, 
                label_method: :permalink, 
                value_method: :id,
                input_html: {class: "uk-select"} %>
            </div>
          </div>
          <div class="uk-margin">
            <div class="uk-form-controls">
              <%= f.button :submit, "Save", class: "uk-button uk-button-primary" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

