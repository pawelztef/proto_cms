<div class="uk-width-1-1@s uk-width-1-1@l uk-width-1-1@xl">
  <div class="uk-card uk-card-default uk-card-small">
    <div class="uk-card-header">
      <div class="uk-grid uk-grid-small">
        <div class="uk-width-auto"><div class="uk-card-title"><span uk-icon="image"></span><%= @title if @title %></div></div>
        <div class="uk-width-expand uk-text-right panel-icons">
        </div>
      </div>
    </div>
    <div class="uk-card-body">
      <div class="chart-container">
            <% @all_media.each do |media| %>
                  <% if media.attachment.attached? %>
                    <%= image_tag media.attachment.variant(combine_options: { resize: "135x135", extent: "135x135", background: "grey", gravity: "center"}), class: "" if media.attachment.attached? %>
                  <% end %>
            <% end %>
      </div>
    </div>
  </div>
</div>

<%= content_for :right_column  do %>
  <div class="uk-width-large admin__right_column" >
    <div class="uk-card uk-card-small uk-card-header uk-card-default ">
      <div class="uk-width-auto"><div class="uk-card-title"><span uk-icon="cog"></span>Upload Media</div></div>
    </div>
    <div class="uk-card uk-card-default uk-card-body">
      <%= render 'form' %>
    </div>
  </div>
<% end %>
