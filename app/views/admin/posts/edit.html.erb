<div class="uk-width-1-1@s uk-width-1-1@l uk-width-1-1@xl">
  <div class="uk-card uk-card-default uk-card-small">
    <div class="uk-card-header">
      <div class="uk-grid uk-grid-small">
        <div class="uk-width-auto"><div class="uk-card-title"><span uk-icon="album"></span><%= @title if @title %>: <%= @admin_post.title %></div></div>
        <div class="uk-width-expand uk-text-right panel-icons">
          <a href= <%= admin_posts_path %> class="uk-icon-link" title="Back" data-uk-tooltip data-uk-icon="icon: arrow-left"></a>
        </div>
      </div>
    </div>
    <div class="uk-card-body">
      <%= render 'form', admin_post: @admin_post %>
    </div>
  </div>
</div>
<%= content_for :right_column  do %>
  <div class="uk-width-large admin__right_column" >
    <section id="publish_cards" class="uk-margin-bottom">
      <div class="uk-card uk-card-small uk-card-header uk-card-default ">
        <div class="uk-width-auto"><div class="uk-card-title"><span uk-icon="world"></span> Publish</div></div>
      </div>
      <div class="uk-card uk-card-default uk-card-body">
        <input type="text" id="datepicker">
        </br>
        </br>
        </br>
        </br>
        <button class="uk-button uk-button-primary uk-button-small">Publish</button>
        <button class="uk-button uk-button-default uk-button-small">Save Draft</button>
        <button class="uk-button uk-button-danger uk-button-small">Delete</button>
      </div>
    </section>
    <section id="categories_tags_cards">
      <div class="uk-card uk-card-small uk-card-header uk-card-default ">
        <div class="uk-width-auto"><div class="uk-card-title"><span uk-icon="cog"></span> Categories and Tags</div></div>
      </div>
      <div class="uk-card uk-card-default uk-card-body">
        <label class="uk-form-label">Categories</label>
        <%= render 'categories_form' %>
      </div>
      <div class="uk-card uk-card-default uk-card-body uk-padding-remove-top">
        <label class="uk-form-label">Tags</label>
        <%= render 'tags_form' %>
      </div>
    </section>
  </div>
<% end %>
