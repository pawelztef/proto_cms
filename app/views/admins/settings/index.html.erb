<div class="uk-width-1-1@s uk-width-1-1@l uk-width-1-1@xl">
  <div class="uk-card uk-card-default uk-card-large">
    <div class="uk-card-header">
      <div class="uk-grid uk-grid-small">
        <div class="uk-width-auto"><h3 class="uk-card-title"><span uk-icon="cog"></span><%= @title if @title %></h3></div>
        <div class="uk-width-expand uk-text-right panel-icons">
        </div>
      </div>
    </div>
    <div class="uk-card-body">
      <div class="chart-container">
        <%= simple_form_for [:admins, @settings] do |f| %>
          <%= f.input :company_name, required: false %>
          <%= f.input :catch_phrase, required: false %>
          <%= f.button :submit, "Save" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
