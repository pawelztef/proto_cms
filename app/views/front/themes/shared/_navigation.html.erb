<div class="uk-container">
  <nav class="nav-scroll">
    <ul #="main-menu" class="uk-subnav uk-flex uk-flex-center uk-flex-nowrap">
      <% @root_pages.each do |page| %>
        <% if page.visible? %>
          <li>
            <%= link_to page.title, page_path(page), class: ( "uk-active" if @page.becomes(Page) == page ) %>
            <% if page.has_children? && !page.is_blog? %>
              <div uk-dropdown>
                <%= render "front/themes/shared/submenu_pages", pages: page.children if (page.has_children? && !page.is_blog?) %>
              </div>
            <% end %>
          </li>
        <% end %>
      <% end %>
    </ul>
  </nav>
</div>

